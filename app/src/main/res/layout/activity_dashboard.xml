<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/tv_click"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:text="Click On Your Interested Topic"
        android:textAlignment="center"
        android:layout_height="105dp"
        android:textSize="42sp"
        android:background="#DCD7DD"
        android:textStyle="bold"
        android:textColor="#F83302"/>
    <ImageView
        android:id="@+id/iv_image1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="120dp"
        android:src="@drawable/ic_arrow_downward"
        android:layout_below="@+id/tv_click" />
    <ImageView
        android:id="@+id/iv_image2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="240dp"
        android:src="@drawable/ic_arrow_downward"
        android:layout_below="@+id/tv_click" />
    <ImageView
        android:id="@+id/iv_image3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="120dp"
        android:src="@drawable/ic_arrow_downward"
        android:layout_below="@+id/iv_image1" />
    <ImageView
        android:id="@+id/iv_image4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="240dp"
        android:src="@drawable/ic_arrow_downward"
        android:layout_below="@+id/iv_image2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:orientation="horizontal">


        <RelativeLayout


            android:id="@+id/colum_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <Button

                android:textColor="@color/colorWhite"
                android:id="@+id/btn_entertainment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/buttonstyle_bg"
                android:padding="@dimen/space_15"
                android:text="Entertainment"
                android:textAllCaps="false" />

            <Button
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_helth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_entertainment"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginEnd="16dp"
                android:background="@drawable/buttonstyle_bg"
                android:padding="@dimen/space_15"
                android:text="Health"
                android:textAllCaps="false" />

            <Button
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_bussiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_helth"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="@dimen/space_8"
                android:background="@drawable/buttonstyle_bg"
                android:padding="@dimen/space_15"
                android:text="Business"
                android:textAllCaps="false" />


        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/linear_colum_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <Button
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_sports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/buttonstyle_bg"
                android:padding="@dimen/space_15"
                android:text="Sports"
                android:textAllCaps="false" />

            <Button
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_science"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_sports"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="@dimen/space_8"
                android:background="@drawable/buttonstyle_bg"
                android:padding="@dimen/space_15"
                android:text="Science"
                android:textAllCaps="false" />

            <Button
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_technology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_science"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="@dimen/space_8"
                android:background="@drawable/buttonstyle_bg"
                android:padding="@dimen/space_15"
                android:text="Technology"
                android:textAllCaps="false" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>